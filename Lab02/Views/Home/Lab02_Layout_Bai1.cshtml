@{
    ViewBag.Title = "About";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        body {
            text-align: center;
            margin: 0;
        }

        .layout {
            width: 800px;
            height: 1020px;
            margin: 0;
        }

        .main-menu {
            width: 100%;
            height: 50px;
            background-color: rgba(255, 0, 0, 0.305);
            margin: 0;
        }

        .header {
            background-color: rgba(0, 0, 255, 0.364);
            height: 100px;
            align-content: center;
        }

        .content-sideBar {
            display: flex;
            height: 800px;
        }

        .content {
            width: 70%;
            align-content: center;
            background-color: rgba(0, 128, 0, 0.327);
        }

        .side-bar {
            width: 30%;
            align-content: center;
            background-color: rgba(31, 111, 31, 0.595);
        }

        .footer {
            background-color: brown;
            height: 80px;
            margin: 0;
            align-content: center;
        }
    </style>
</head>
<body>
    <div class="layout">
        <div class="main-menu">
            <h1>Main Menu</h1>
        </div>

        <div class="header">
            <h1>Header</h1>
        </div>

        <div class="content-sideBar">
            <div class="content">
                <h1>Main Content</h1>
            </div>
            <div class="side-bar">
                <h1>Side bar</h1>
            </div>
        </div>



        <div class="footer">
            <h1>Footer</h1>
        </div>
    </div>
</body>
</html>
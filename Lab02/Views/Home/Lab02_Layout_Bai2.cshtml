@{
    ViewBag.Title = "About";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        .layout {
            width: 900x;
            height: 1200px;
            font-family: Arial;
            margin: 0;
            padding: 0;
        }
        /* Header */
        .main-menu {
            width: 100%;
            height: 50px;
        }

        ul {
            list-style-type: none;
            display: flex;
            text-align: left;
            float: left;
            justify-content: center;
        }

        li {
            position: relative;
            margin: 10px;
            padding: 0;
        }

        #aboutbg {
            background-color: orange;
            color: white;
        }

        .header {
            width: 100%;
            height: 200px;
        }

        img {
            margin-top: 10px;
            width: 100%;
            height: 200px;
            z-index: 1;
            display: block;
        }
        /* Body */
        .content {
            margin-top: 10px;
            padding: 5px;
            float: left;
            width: 55%;
            height: 100%;
        }

        .side-bar {
            margin-top: 10px;
            float: right;
            width: 40%;
            height: 100%;
        }
        /* Footer */

        .footer {
            width: 100%;
            height: 100px;
            font-size: 10px;
        }

        .footer1 {
            width: 50%;
            float: left;
        }

        .footer2 {
            width: 50%;
            float: inline-end;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="layout">
        <!-- Menu  -->
        <div class="main-menu">

@{
    ViewBag.Title = "About";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style type="text/css">

        .Table1 {
            border: 5px solid rgb(0, 101, 103);
            width: 500px;
            height: 300px;
            text-align: left;
        }

        .header {
            background-color: black;
            color: white;
            font-weight: bold;
            margin: 0;
            font-style: italic;
            padding: 10px;
        }

        .col1 {
            background-color: rgb(0, 0, 103);
            color: white;
            border-top: 2px solid rgb(40, 237, 255);
            font-style: italic;
            padding: 10px;
        }

        .col2, .col3, .col4 {
            background-color: rgb(0, 101, 103);
            color: white;
            border-top: 2px solid rgb(40, 237, 255);
            padding: 10px;
        }
    </style>
</head>
<body>
    <table class="Table1" cellspacing="0">
        <tr>
            <th class="header">header 1</th>
            <th class="header">header 2</th>
            <th class="header">header 3</th>
            <th class="header">header 4</th>
        </tr>
        <tr>
            <td class="col1">column1</td>
            <td class="col2">column2</td>
            <td class="col3">column3</td>
            <td class="col4">column4</td>
        </tr>
        <tr>
            <td class="col1">column1</td>
            <td class="col2">column2</td>
            <td class="col3">column3</td>
            <td class="col4">column4</td>
        </tr>
        <tr>
            <td class="col1">column1</td>
            <td class="col2">column2</td>
            <td class="col3">column3</td>
            <td class="col4">column4</td>
        </tr>
        <tr>
            <td class="col1-last" style="background-color: rgb(0, 0, 103); color: white; border-top: 2px solid rgb(40, 237, 255); padding: 10px">column1</td>
            <td class="col2">column2</td>
            <td class="col3">column3</td>
            <td class="col4">column4</td>
        </tr>
    </table>

</body>
</html>